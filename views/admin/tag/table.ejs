<table id="example2" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>No.</th>
      <th>Nama</th>
      <th>Aksi</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i = 0; i < tag.length; i++) { %>
    <tr>
      <td><%= i + 1 %></td>
      <td><%= tag[i].name %></td>
      <td>
          <form action="/tag/delete/<%= tag[i]._id %>?_method=DELETE" method="post">
            <a href="/tag/edit/<%= tag[i]._id %>" class="btn btn-info btn-sm"><i class="fas fa-pencil-alt"></i>Ubah</a>
          <button class="btn btn-danger btn-sm" type="submit">
            <i class="fas fa-trash"></i> Hapus
          </button>
        </form>
      </td>
    </tr>
    <% } %>
  </tbody>
</table>
